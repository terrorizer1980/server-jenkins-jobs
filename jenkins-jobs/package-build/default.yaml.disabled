- defaults:
    name: global
    description: |
        Package Build Ubuntu Server QA Jenkins Job

        *** STOP ***
        Do NOT edit this job through the web
        This job is managed by Jenkins Job Builder and stored on Github via the URL below:
        https://github.com/canonical/server-jenkins-jobs
        *** STOP ***
    properties:
      - build-discarder:
          num-to-keep: 10

- project:
    name: 'package-build'
    release:
      - 'bionic'
      - 'xenial'
    arch:
      - 'amd64'
      - 'ppc64el'
    team:
      - 'ubuntu-server'
    jobs:
      - '{team}-{release}-{arch}-build'

- job-template:
    name: '{team}-{release}-{arch}-build'
    node: !j2: "{{ {'amd64': 'metal-amd64', 'ppc64el': 'metal-ppc64el'}[arch] }}"
    triggers:
      - timed: "H H * * 6"
    wrappers:
      - timestamps
      - workspace-cleanup
    publishers:
      - archive:
          artifacts: 'server-test-build/logs/**'
      - junit:
          results: server-test-build/results.xml
    builders:
      - package-build:
          release: '{release}'
          team: '{team}'

- builder:
    name: package-build
    builders:
      - shell: |
          #!/bin/bash
          set -Eeufx -o pipefail
          git clone https://github.com/canonical/server-test-build
          cd server-test-build

          PACKAGES=$(./get_team_packages {team})
          ./build-packages {release} $PACKAGES || true
          ./parse_results
